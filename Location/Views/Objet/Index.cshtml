@model IEnumerable<Location.Models.Objet>

@{
    ViewBag.Title = "Mes objets";
}

<h2>Mes objets proposés</h2>


@foreach (var item in Model)
{
    <div class="row objet">
        <div class="photo col-xs-2">
            <img src="http://placehold.it/160x120" />
        </div>
        <div class="col-xs-6">
            <h3>@item.Titre</h3>
            <p>
                @item.Description
            </p>
        </div>
        <div class="infos col-xs-2">
            <span class="tarif">@item.Tarif€</span><span class="jour">/jour</span><br />
            Caution : @item.Caution €<br />
        </div>
        <div class="outils col-xs-2">
            <a href="@Url.Action("Edit", "Objet", new { id = item.Id })"><span class='glyphicon glyphicon-pencil' aria-hidden='true'></span> Modifier</a><br />
            <a href="@Url.Action("Delete", "Objet", new { id = item.Id })"><span class='glyphicon glyphicon-remove' aria-hidden='true'></span> Supprimer</a>
        </div>
    </div>
}

<div class="row objet">
    <div id="nouvel-objet" class="col-xs-12">
        <a href="@Url.Action("Create", "Objet")"><span class='glyphicon glyphicon-plus' aria-hidden='true'></span> Proposer un nouvel objet</a>
    </div>
</div>
@model Location.Models.Reservation

@{
    ViewBag.Title = "Annuler une réservation";
}

<h2>Annuler une réservation</h2>

<h3>Êtes-vous sûr de vouloir annuler cette réservation ?</h3>
<div>
    <div class="row objet">
        <div class="photo col-xs-2">
            <img src="http://placehold.it/160x120" />
        </div>
        <div class="col-xs-5">
            <h3>@Model.objet.Titre</h3>
            <p>
                @Model.objet.Description
            </p>
        </div>
        <div class="infos col-xs-2">
            <span class="tarif">@Model.objet.Tarif€</span><span class="jour">/jour</span><br />
            Caution : @Model.objet.Caution €<br />
        </div>
        <div class="infos col-xs-3">
            Début de la réservation : @Model.dateDebut.ToShortDateString()<br />
            Fin de la réservation : @Model.dateFin.ToShortDateString()<br /><br />

            @Convert.ToInt32((Model.dateFin - Model.dateDebut).TotalDays) Jours de reservation<br />
            Montant total : @(@Convert.ToInt32((Model.dateFin - Model.dateDebut).TotalDays) * Model.objet.Tarif) €
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a href="@Url.Action("Index", "Reservation")"><span class='glyphicon glyphicon-chevron-left' aria-hidden='true'></span> Retour à la liste de mes réservations</a>&nbsp;
            <input type="submit" value="Annuler ma réservation" class="btn btn-default" />
        </div>
    }
</div>
